@model Studentpack.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Student</h4>
    <dl class="row">
        <dt class="col-sm-2">StudentId</dt>
        <dd class="col-sm-10">@Model.StudentId</dd>
        <dt class="col-sm-2">FirstName</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>
        <dt class="col-sm-2">LastName</dt>
        <dd class="col-sm-10">@Model.LastName</dd>
        <dt class="col-sm-2">DateOfBirth</dt>
        <dd class="col-sm-10">@Model.DateOfBirth.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">ClassId</dt>
        <dd class="col-sm-10">@Model.ClassId</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="StudentId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
