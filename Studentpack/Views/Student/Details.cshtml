@model Studentpack.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<div>
    <h2>@ViewData["Title"]</h2>
    <dl class="row">
        <dt class="col-sm-2">StudentId</dt>
        <dd class="col-sm-10">@Model.StudentId</dd>
        <dt class="col-sm-2">FirstName</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>
        <dt class="col-sm-2">LastName</dt>
        <dd class="col-sm-10">@Model.LastName</dd>
        <dt class="col-sm-2">DateOfBirth</dt>
        <dd class="col-sm-10">@Model.DateOfBirth.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">ClassId</dt>
        <dd class="col-sm-10">@Model.ClassId</dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.StudentId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
