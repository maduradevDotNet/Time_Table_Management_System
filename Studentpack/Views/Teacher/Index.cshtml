@model List<Studentpack.Models.Teacher>

@{
    ViewData["Title"] = "Teacher Index";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2>Teacher Index</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-success">Create New</a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>TeacherId</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>DateOfBirth</th>
                <th>Email</th>
                <th>PhoneNumber</th>
                <th>Number of Classes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model)
            {
                <tr>
                    <td>@teacher.TeacherId</td>
                    <td>@teacher.FirstName</td>
                    <td>@teacher.LastName</td>
                    <td>@teacher.DateOfBirth.ToString("yyyy-MM-dd")</td>
                    <td>@teacher.Email</td>
                    <td>@teacher.PhoneNumber</td>
                    <td>@(teacher.Classes?.Count ?? 0)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@teacher.TeacherId" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@teacher.TeacherId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@teacher.TeacherId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
